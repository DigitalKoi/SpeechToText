<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

  <TextView
      android:id="@+id/historyPatientIdItem"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Vasilii"
      android:gravity="top"
      android:maxLines="2"
      app:layout_constraintStart_toEndOf="@+id/historyIdItem"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/historyDateItem"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="22/03/2018"
      android:gravity="top"
      android:maxLines="2"
      app:layout_constraintStart_toEndOf="@+id/historyPatientIdItem"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/historyConversationItem"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:gravity="top"
      android:maxLines="2"
      android:text="Some text for example fdsfs fa dfa df a "
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/historyDateItem"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/historyIdItem"
      android:layout_width="25dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:gravity="top"
      android:maxLines="2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:paddingBottom="8dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintTop_toBottomOf="@+id/historyDateItem"
      tools:layout_editor_absoluteX="8dp"
      />
</android.support.constraint.ConstraintLayout>